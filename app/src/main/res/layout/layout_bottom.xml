<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/home_text"
        android:src="@drawable/home" android:layout_weight="1"
        android:gravity="center"
        >
    </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/folders_text"
        android:src="@drawable/folder" android:layout_weight="1"
        android:gravity="center"
        >
    </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/add_text"
        android:src="@drawable/add" android:layout_weight="1"
        android:gravity="center"
       >
    </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/study_text"
        android:src='@drawable/study' android:layout_weight="1"
        android:gravity="center"
        >

    </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/stats_text"
        android:src='@drawable/statistic' android:layout_weight="1"
        android:gravity="center"
       >

    </ImageView>

</LinearLayout>
