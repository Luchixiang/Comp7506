<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/home_deck_item_img"
        android:src="@drawable/spring_showers"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_deck_corner"
        android:alpha="0.9"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"

        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section 1"
            android:maxLength="20"
            android:textSize="20sp"
            android:id="@+id/home_deck_item_title"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:text="Description for ip"
            android:layout_below="@+id/home_deck_item_title"
            android:layout_marginTop="10dp"
            android:id="@+id/home_deck_item_description"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="20 cards |"
            android:layout_below="@+id/home_deck_item_description"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/home_deck_item_card_num"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_personal"
            android:layout_below="@+id/home_deck_item_description"
            android:layout_toRightOf="@+id/home_deck_item_card_num"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/home_deck_item_user_profile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_deck_item_user_name"
            android:layout_toRightOf="@id/home_deck_item_user_profile"
            android:layout_below="@+id/home_deck_item_description"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="Amy"/>

    </RelativeLayout>

</RelativeLayout>
