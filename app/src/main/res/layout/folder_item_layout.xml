<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="normal"
    android:id="@+id/folder_swipereval">

    <LinearLayout
        android:id="@+id/delete_layout"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/forlder_item_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/folder_item_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/edit"
            android:layout_marginTop="50dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/folder_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/item_left_corner"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/deck_folder" />

            <TextView
                android:id="@+id/folder_item_deck_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="30 decks" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/item_right_corner"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_folder_title"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Folder 1"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_folder_description"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="This is the discription for the folder" />
        </LinearLayout>
    </LinearLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>