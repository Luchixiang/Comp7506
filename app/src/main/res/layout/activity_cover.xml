<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoverActivity"
    android:background="#6F93A9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyStudy!"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textColor="#FEC959"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/cover"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/cover_img"/>
    <TextView
        android:id="@+id/cover_register"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_img"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corner_icon"
        android:gravity="center_horizontal"
        android:text="Registeration"
        android:textColor="#ffffff"
        android:textSize="26sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Already have a account?"
        android:textColor="#000000"
        android:layout_below="@+id/cover_register"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:id="@+id/cover_already"
        android:layout_marginLeft="80dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "sign in"
        android:textColor="#FEC959"
        android:id="@+id/cover_sign_in"
        android:layout_toRightOf="@+id/cover_already"
        android:layout_toEndOf="@+id/cover_already"
        android:layout_below="@+id/cover_register"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp" />
</RelativeLayout>